// + ДБ Французова 10.02.2023   ( 66 права доступа комментарий при изменении)
&НаСервере
Процедура ДБ_ПриСозданииНаСервереПосле(Отказ, СтандартнаяОбработка) 
	// + ДБ Французова 10.02.2023   ( 66 права доступа комментарий при изменении)
	ДБ_ДобавлениеРеквизитовФормы(); 
	ДБ_ДобавлениеЭлементовФормы();  
	ДБ_УправлениеВидимостьюЭлементовФормы();
	// - ДБ Французова 10.02.2023    ( 66 права доступа комментарий при изменении)
КонецПроцедуры
// - ДБ Французова 10.02.2023    ( 66 права доступа комментарий при изменении)


/////////////////  ДОРАБОТКИ ///////////////////
// + ДБ Французова 10.02.2023   ( 66 права доступа комментарий при изменении)   
&НаСервере
Процедура ДБ_ДобавлениеРеквизитовФормы()    
	МассивДопРеквизитов = Новый Массив;
	СтавкаПроц = Новый РеквизитФормы("ДБ_СтавкаПроцентов",
	Новый ОписаниеТипов("Число", Новый КвалификаторыЧисла(15, 3)),
	,"Ставка Процентов");   
	МассивДопРеквизитов.Добавить(СтавкаПроц);  
	ЭтаФорма.ИзменитьРеквизиты(МассивДопРеквизитов);
КонецПроцедуры

// - ДБ Французова 10.02.2023    ( 66 права доступа комментарий при изменении)   
// + ДБ Французова 10.02.2023   ( 66 права доступа комментарий при изменении)
&НаСервере
Процедура ДБ_ДобавлениеЭлементовФормы()     
	НовыйЭлемент = Элементы.Добавить("ДБ_СтавкаПроцентов", Тип("ПолеФормы"),Элементы.ГруппаВводаСтавкиПроцентов);
	НовыйЭлемент.Вид = ВидПоляФормы.ПолеВвода; 
	НовыйЭлемент.Заголовок = "Процентная ставка";
	НовыйЭлемент.ПутьКДанным = "ДБ_СтавкаПроцентов"; 
	НовыйЭлемент.УстановитьДействие("ПриИзменении","ДБ_ИзменитьПроцентнуюСтавку");
    	
КонецПроцедуры

// - ДБ Французова 10.02.2023    ( 66 права доступа комментарий при изменении)
// + ДБ Французова 10.02.2023   ( 66 права доступа комментарий при изменении) 
&НаСервере
Процедура ДБ_УправлениеВидимостьюЭлементовФормы()   
	Если Элементы.Найти("ДБ_СтавкаПроцентов") Тогда   
		Элементы.СтавкаПроцентов.Видимость = Ложь;
		ДБ_СтавкаПроцентов = СтавкаПроцентов;
	КонецЕсли;
	
КонецПроцедуры

// - ДБ Французова 10.02.2023    ( 66 права доступа комментарий при изменении)   
// + ДБ Французова 10.02.2023   ( 66 права доступа комментарий при изменении) 
&НаСервере
Процедура ДБ_ИзменитьПроцентнуюСтавку()
КонецПроцедуры	
