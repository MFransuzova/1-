 &НаСервере
 Процедура АпИТ_ДобавлениеЭлементовФормы()      
	 КП = ЭтаФорма.КоманднаяПанель; 
	 Кнопка_АпИТ_СоздатьСборку                        = Элементы.Добавить("Кнопка_АпИТ_СоздатьСборкуРазборку", Тип("КнопкаФормы"), КП);
	 Кнопка_АпИТ_СоздатьСборку.Вид                    = ВидКнопкиФормы.ОбычнаяКнопка;
	 Кнопка_АпИТ_СоздатьСборку.ИмяКоманды             = "АпИТ_СоздатьСборкуРазборку";
	 Кнопка_АпИТ_СоздатьСборку.Заголовок              = "Создать сборку"; 
 КонецПроцедуры
 
 // Конец~, Французова, 06/06/2025       
 // Начало~, Французова, 06/06/2025  
 &НаКлиенте
 Процедура АпИТ_СоздатьСборкуРазборку()   Экспорт
	 Сообщение = Новый СообщениеПользователю;   
	 Сообщение.Текст = Строка("Здесь");
	 Сообщение.Сообщить();                      
	 ФормаСборки = ПолучитьФорму("Документ.СборкаТоваров.ФормаОбъекта");
	 ДанныеФормы = ФормаСборки.Объект;
	 АпИТ_СоздатьСборку(ДанныеФормы);  
	 КопироватьДанныеФормы(ДанныеФормы,ФормаСборки.Объект); 
	 ФормаСборки.Открыть();
 КонецПроцедуры
 
 // Конец~, Французова, 06/06/2025      
 &НаСервере
 Процедура АпИТ_СоздатьСборку(ДанныеФормы)   
	СтруктураДанных = Новый Структура;
	СтруктураДанных.Вставить("Номенклатура",Объект.Владелец);
	ЗаполнитьЗначенияСвойств(ДанныеФормы,СтруктураДанных);
 КонецПроцедуры
 
